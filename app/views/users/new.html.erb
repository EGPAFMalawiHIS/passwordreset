<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="text-center mb-4">Create Account</h2>
        
        <%= form_with model: @user, url: signup_path, method: :post, local: true do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@user.errors.count, "error") %> prohibited this account from being created:</h5>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="row mb-3">
            <div class="col-md-6">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", required: true %>
            </div>
            <div class="col-md-6">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control", required: true %>
            </div>
          </div>
          
          <div class="mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true, 
                                 minlength: 8, 
                                 data: { 
                                   bs_toggle: "tooltip", 
                                   bs_placement: "right", 
                                   bs_title: "Password must be at least 8 characters long" 
                                 } %>
          </div>
          
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true %>
          </div>
          
          <div class="d-grid gap-2">
            <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
        
        <div class="text-center mt-3">
          <p class="mb-0">Already have an account? <%= link_to "Sign in", login_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>

