<div class="row min-vh-100">
  <!-- Info section on the left -->
  <div class="col-lg-6 bg-primary text-white d-flex align-items-center">
    <div class="p-5">
      <h1 class="display-4 mb-4">Password Reset Portal</h1>
      <div class="mb-4">
        <p class="lead">Secure password reset management system for helpdesk officers.</p>
      </div>
      
      <div class="d-flex flex-column gap-3 mt-5">
        <div class="d-flex align-items-center">
          <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
            <i class="bi bi-shield-lock fs-4"></i>
          </div>
          <div>
            <h5 class="mb-0">Secure Password Reset</h5>
            <p class="mb-0 text-white-50">AES-256 encryption for reset codes</p>
          </div>
        </div>
        
        <div class="d-flex align-items-center">
          <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
            <i class="bi bi-clock-history fs-4"></i>
          </div>
          <div>
            <h5 class="mb-0">24-hour Expiration</h5>
            <p class="mb-0 text-white-50">Automatic code expiration for security</p>
          </div>
        </div>
        
        <div class="d-flex align-items-center">
          <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
            <i class="bi bi-file-earmark-text fs-4"></i>
          </div>
          <div>
            <h5 class="mb-0">Comprehensive Reporting</h5>
            <p class="mb-0 text-white-50">Export transaction data in multiple formats</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Form section on the right -->
  <div class="col-lg-6 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm border-0 w-100" style="max-width: 400px;">
      <div class="card-body p-4">
        <h2 class="text-center mb-4">Sign In</h2>
        
        <%= form_with url: login_path, method: :post, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", required: true, autofocus: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>
          
          <div class="d-grid gap-2">
            <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
        
        <div class="text-center mt-3">
          <p class="mb-0">Don't have an account? <%= link_to "Sign up", signup_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>

